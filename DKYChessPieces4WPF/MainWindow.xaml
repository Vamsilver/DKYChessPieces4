                <MenuItem Header="King" Click="MenuItemKing_Click"/>
                <MenuItem Header="Queen"  Click="MenuItemQueen_Click"/>
                <MenuItem Header="Rook" Click="MenuItemRook_Click"/>
                <MenuItem Header="Pawn" Click="MenuItemPawn_Click"/>
