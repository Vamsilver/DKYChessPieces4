<Window x:Class="DKYChessPieces4WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DKYChessPieces4WPF"
        mc:Ignorable="d"
        Title="Chess" Height="930" Width="840" MinHeight="435" MinWidth="350">

    <Window.Resources>
        <Style x:Key="labelStyle" TargetType="Label">
            <Setter Property="Padding" Value="900"/>
            <Setter Property="Content" Value=""/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <EventSetter Event="MouseLeftButtonDown" Handler="Label_MouseLeftButtonDown"/>
        </Style>

        <Style x:Key="labelWhite" BasedOn="{StaticResource labelStyle}" TargetType="Label">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="Transparent"/>
            <EventSetter Event="MouseLeftButtonDown" Handler="Label_MouseLeftButtonDown"/>
        </Style>

        <Style x:Key="labelBlack" BasedOn="{StaticResource labelStyle}" TargetType="Label">
            <Setter Property="Background" Value="Black"/>
            <Setter Property="Foreground" Value="Transparent"/>
            <EventSetter Event="MouseLeftButtonDown" Handler="Label_MouseLeftButtonDown"/>
        </Style>

        <Style x:Key="labelMarking" TargetType="Label">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="FontSize" Value="25"/>
            <Setter Property="MaxWidth" Value="40"/>
            <Setter Property="MaxHeight" Value="40"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="labelMarkingInverted" BasedOn="{StaticResource labelMarking}" TargetType="Label">
            <Setter Property="LayoutTransform">
                <Setter.Value>
                    <RotateTransform Angle="180"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="Image" TargetType="Image">
            <EventSetter Event="MouseLeftButtonDown" Handler="Image_MouseLeftButtonDown"/>
            <EventSetter Event="MouseRightButtonDown" Handler="Image_MouseRightButtonDown"/>
            <Setter Property="Visibility" Value="Hidden"/>
            <Setter Property="Grid.Row" Value="10"/>
            <Setter Property="Grid.Column" Value="0"/>
            <Setter Property="StretchDirection" Value="Both"/>
            <Setter Property="Stretch" Value="Fill"/>
        </Style>
    </Window.Resources>

